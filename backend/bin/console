#!/usr/bin/env php
<?php

declare(strict_types=1);

use App\Kernel;
use Symfony\Bundle\FrameworkBundle\Console\Application;

$projectDir = dirname(__DIR__);

// Verificaciones iniciales de dependencias
if (!is_dir($projectDir . '/vendor')) {
    throw new LogicException('Dependencies are missing. Run "composer install" to install them.');
}

$autoloadRuntime = $projectDir . '/vendor/autoload_runtime.php';
if (!is_file($autoloadRuntime)) {
    throw new LogicException('Symfony Runtime is missing. Run "composer require symfony/runtime".');
}

require_once $autoloadRuntime;

return static function (array $context): Application {
    $env = $context['APP_ENV'] ?? 'prod';
    $debug = isset($context['APP_DEBUG']) ? (bool) $context['APP_DEBUG'] : false;

    $kernel = new Kernel($env, $debug);

    // Opcional: configurar logging bÃ¡sico para CLI en dev
    if ($debug && class_exists(\Symfony\Component\ErrorHandler\Debug::class)) {
        \Symfony\Component\ErrorHandler\Debug::enable();
    }

    return new Application($kernel);
};
