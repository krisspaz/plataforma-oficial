# ==============================================
# PLATAFORMA ESCOLAR - ENVIRONMENT CONFIGURATION
# ==============================================

# ==============================================
# APPLICATION
# ==============================================
APP_ENV=prod
APP_SECRET=changeme_generate_with_openssl_rand_hex_32
APP_DEBUG=0

# ==============================================
# DATABASE (PostgreSQL)
# ==============================================
POSTGRES_DB=school_platform
POSTGRES_USER=app
POSTGRES_PASSWORD=ChangeMe123!SecurePassword
POSTGRES_PRIMARY_PORT=5432

# Database URL for Symfony
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@pgbouncer:6432/${POSTGRES_DB}?serverVersion=16&charset=utf8"

# ==============================================
# PGBOUNCER
# ==============================================
PGBOUNCER_PORT=6432

# ==============================================
# REDIS
# ==============================================
REDIS_URL="redis://:redis_secure_password@redis:6379"
REDIS_PASSWORD=redis_secure_password
REDIS_PORT=6379

# ==============================================
# JWT AUTHENTICATION
# ==============================================
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=your_jwt_passphrase_here

# ==============================================
# CORS
# ==============================================
CORS_ALLOW_ORIGIN=^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$

# ==============================================
# MESSENGER (Async Jobs)
# ==============================================
MESSENGER_TRANSPORT_DSN=redis://redis:6379/messages

# ==============================================
# MAILER
# ==============================================
MAILER_DSN=smtp://localhost:1025
MAILER_FROM_EMAIL=noreply@school.local
MAILER_FROM_NAME="School Platform"

# ==============================================
# PAYMENT GATEWAYS
# ==============================================

# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# BAC (Banco de Am√©rica Central)
BAC_MERCHANT_ID=your_bac_merchant_id
BAC_API_KEY=your_bac_api_key
BAC_API_SECRET=your_bac_api_secret

# ==============================================
# AI SERVICE
# ==============================================
AI_SERVICE_URL=http://ai-service:8001
AI_SERVICE_PORT=8001

# ==============================================
# FRONTEND
# ==============================================
VITE_API_URL=http://localhost:8000/api
HTTP_PORT=80
HTTPS_PORT=443
BACKEND_PORT=9000

# ==============================================
# SECURITY & MONITORING
# ==============================================

# Trusted Proxies (for reverse proxy)
TRUSTED_PROXIES=127.0.0.1,REMOTE_ADDR
TRUSTED_HOSTS=localhost,127.0.0.1

# Default URI for CLI commands
DEFAULT_URI=http://localhost

# Sentry (Error Tracking)
SENTRY_DSN=

# ==============================================
# DEVELOPMENT ONLY
# ==============================================

# Profiler (disable in production)
PROFILER_ENABLED=0

# Debug Toolbar (disable in production)
DEBUG_TOOLBAR_ENABLED=0
